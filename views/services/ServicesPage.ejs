<% layout("/layouts/boilerplate") %>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 g-4">
        <% for(service of allServices) { %>
            <div class="col">
                <div class="card service-card h-100">
                    <div class="card-body p-3">
                        <p class="card-text">
                            <b><%= service.name %></b>
                            <br>
                            <p><%= service.description %></p>
                            &#8377; <%= service.price ? service.price.toLocaleString("en-IN") : 'N/A' %>
                            <br>
                            <br>
                            <div class="d-flex">
                                <form action="/editService/<%= service._id %>" method="get" class="me-2">
                                    <button class="btn btn-dark add-btn">Edit</button>
                                </form>
                                <form action="/deleteService/<%= service._id %>?_method=DELETE" method="post">
                                    <button class="btn btn-outline-dark">Delete</button>
                                </form>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</body>
